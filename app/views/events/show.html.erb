<p id="notice"><%= notice %></p>

<p>
  <strong>Time:</strong>
  <%= @event.time.strftime("%l:%M %p") %>
</p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Flyer Image:</strong>
  <%= image_tag @event.flyer_image.url(:medium) %>
</p>

<p>
  <strong>Cost:</strong>
  <%= @event.cost %>
</p>

<p>
  <strong>Styles:</strong>
  <%= @event.dance_styles.map(&:name).join(", ") %>
</p>



<%= link_to 'Edit', edit_event_path(@event) %> |
