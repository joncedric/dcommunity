<p id="notice"><%= notice %></p>

<h1>Listing Dance Classes</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Description</th>
      <th>Dance style</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dance_classes.each do |dance_class| %>
      <tr>
        <td><%= dance_class.time.strftime("%l:%M %p") %></td>
        <td><%= dance_class.description %></td>
        <td><%= dance_class.dance_style.name %></td>
        <td><%= dance_class.teacher.name %></td>
        <td><%= link_to 'Show', dance_class %></td>
        <td><%= link_to 'Edit', edit_dance_class_path(dance_class) %></td>
        <td><%= link_to 'Destroy', dance_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

