<ul>
  <li><%= link_to 'Studios', studios_path %></li>
  <li><%= link_to 'Dance Classes', dance_classes_path %></li>
  <%= form_tag(dance_classes_path, method: "get")  do %>
    <%= select_tag "query", options_from_collection_for_select(@dance_styles, "id", "name") %>
    <%= submit_tag("Search") %>
  <% end %>
  <li><%= link_to 'Events', events_path %></li>
  <h2>Upcoming Events</h2>

  <table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming_events.each do |event| %>
      <tr>
        <td><%= event.time %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</ul>