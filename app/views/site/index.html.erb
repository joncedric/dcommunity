<ul>
  <%= form_tag(dance_classes_path, method: "get")  do %>
    <%= select_tag "query", options_from_collection_for_select(@dance_styles, "id", "name") %>
    <%= submit_tag("Search") %>
  <% end %>

  <h2>Upcoming Events</h2>

  <div class="row">
    <div class="small-9 columns small-centered">
      <% @upcoming_events.each do |event| %>
        <article class="event">

          <div class="event-date">
            <p class="event-month">Sept</p>
            <p class="event-day">18</p>
          </div>

          <div class="event-desc">
            <h4 class="event-desc-header"><%= event.name %></h4>
            <p class="event-desc-detail"><span class="event-desc-time"></span><%= event.description %></p>
            <%= link_to 'View Details', event, class: "rsvp button" %>
          </div>

        </article>

        <hr>
      <% end %>
    </div>
  </div>


  <table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming_events.each do |event| %>
      <tr>
        <td><%= event.time %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</ul>
